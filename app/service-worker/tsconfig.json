{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ESNext",
      "WebWorker",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": [
        "../../*"
      ],
      "@/*": [
        "../../*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client"
    ],
    "noEmit": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
