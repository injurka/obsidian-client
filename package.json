{
  "name": "obsidian-mark-client",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "start": "nuxt start",
    "preview": "nuxt preview",
    "generate": "nuxt generate",
    "prepare": "nuxt prepare",
    "analyze": "nuxt analyze",
    "--------------------------------------------------------------------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "----------------------------------------------------------------------------------": "",
    "postinstall": "simple-git-hooks && nuxt prepare"
  },
  "dependencies": {
    "@vueuse/core": "13.6.0",
    "@vueuse/nuxt": "13.6.0",
    "fuse.js": "^7.1.0",
    "markdown-it": "14.1.0",
    "markdown-it-attrs": "4.3.1",
    "markdown-it-collapsible": "2.0.2",
    "markdown-it-container": "4.0.0",
    "markdown-it-obsidian-callouts": "0.3.3",
    "shiki": "^3.21.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "7.2.0",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify/vue": "^5.0.0",
    "@nuxt/eslint": "1.12.1",
    "@nuxt/fonts": "0.12.1",
    "@nuxtjs/color-mode": "4.0.0",
    "@pinia/nuxt": "0.11.3",
    "@types/markdown-it": "14.1.2",
    "@types/markdown-it-attrs": "4.1.3",
    "@types/markdown-it-container": "2.0.11",
    "@types/workbox-sw": "^4.3.7",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vite-pwa/nuxt": "^1.1.0",
    "eslint": "9.39.2",
    "eslint-plugin-format": "1.3.1",
    "nuxt": "^4.2.2",
    "pinia": "3.0.4",
    "sass": "1.97.2",
    "simple-git-hooks": "2.13.1",
    "vue-tsc": "3.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged && bun run typecheck",
    "post-commit": "git status",
    "post-merge": "bun i"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
