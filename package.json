{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "start": "nuxt start",
    "preview": "nuxt preview",
    "generate": "nuxt generate",
    "prepare": "nuxt prepare",
    "analyze": "nuxt analyze",
    "--------------------------------------------------------------------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "----------------------------------------------------------------------------------": "",
    "postinstall": "simple-git-hooks && nuxt prepare"
  },
  "dependencies": {
    "@luohc92/vue3-image-viewer": "^1.0.4",
    "markdown-it": "14.1.0",
    "markdown-it-attrs": "4.3.1",
    "markdown-it-collapsible": "2.0.2",
    "markdown-it-container": "4.0.0",
    "markdown-it-obsidian-callouts": "0.3.2",
    "shiki": "^3.2.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.12.0",
    "@mdi/font": "7.4.47",
    "@nuxt/eslint": "1.3.0",
    "@nuxt/fonts": "0.11.2",
    "@nuxtjs/color-mode": "3.5.2",
    "@pinia/nuxt": "0.9.0",
    "@types/markdown-it": "14.1.2",
    "@types/markdown-it-attrs": "4.1.3",
    "@types/markdown-it-container": "2.0.10",
    "@vite-pwa/nuxt": "^1.0.0",
    "eslint": "9.24.0",
    "eslint-plugin-format": "1.0.1",
    "nuxt": "3.13.2",
    "pinia": "2.3.0",
    "sass": "1.77.8",
    "simple-git-hooks": "2.12.1",
    "vue-tsc": "2.2.8",
    "vuetify": "3.8.3",
    "vuetify-nuxt-module": "0.18.6"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged && bun run typecheck",
    "post-commit": "git status",
    "post-merge": "bun i"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
